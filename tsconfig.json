{
    "compilerOptions": {
        // We need to feed ES Modules to webpack for tree shaking to work
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2015",
        "strict": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "outDir": "./target/",
        "rootDir": "./src/"
    },
    "files": ["./src/index.ts"]
}
